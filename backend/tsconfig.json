{
  "compilerOptions": {
    "target": "ES6",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable", "ES6"], // incl ES6 for MUI: https://mui.com/material-ui/guides/typescript/ (DOM was in the Vite TS boilerplate)
    "module": "CommonJS",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "noImplicitAny": false, // switch to true later to work best with MUI
    "outDir": "./dist",

    /* Bundler mode */
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["./**/*", "custom.d.ts", "config.ts"],
  "ts-node": {
    "experimentalSpecifierResolution": "node"
  }
}